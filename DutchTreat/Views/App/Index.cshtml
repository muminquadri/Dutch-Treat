@{
    ViewBag.Title = "Home Page";
}

    <div class="product-info">
        <img src="~/img/VanGogh.jpg" />
        <h3>Mug</h3>
        <ul class="product-props">
            <li>Price:$9.99</li>
            <li>Artist: Van Gogh</li>
            <li>Title: </li>
            <li>Description: Self-portrait</li>
        </ul>
        <button id="buyButton">Buy</button>
    </div>
    <div id="theForm">
        <form>
            <label>Your Name</label>
            <br />
            <input />
            <br />
            <label>Email</label>
            <br />
            <input type="email" />
            <br />
            <label>Subject</label>
            <br />
            <input type="text" />
            <br />
            <textarea rows="4"></textarea>
            <br />
            <input type="submit" value="Send Message" />
        </form>
    </div>
    <div>
        <div id="loginToggle">Login</div>
        <form class="popup-form">
            <div>
                <label>Username</label>
                <input type="text" class="userName" />
                <span id="errorMessage">Enter Valid UserName</span>
            </div>
            <div>
                <label>Password</label>
                <input class ="pwd"type="password" />
                <span id="error">Enter Valid Credentials</span>
            </div>
            <div>
                <input type="checkbox" />
                <label>Remember Me?</label>
            </div>
            <div>
                <input type="submit" value="Login" />
            </div>
        </form>
    </div>

   
